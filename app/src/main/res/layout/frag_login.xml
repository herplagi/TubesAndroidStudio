<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:textColor="@color/Orange"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/username_login"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_below="@+id/username_login"
        android:hint="Username"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="276dp" />

    <EditText
        android:id="@+id/pw_login"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pw_login"
        android:hint="Password"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="343dp" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="signin"
        android:text="Sign In"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/signin_button2"
        android:layout_width="260dp"
        android:layout_height="50dp"

        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="signin2"
        android:text="Create New Account"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="469dp" />

    <!-- Tambahkan ImageView untuk menampilkan gambar -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="218dp"
        android:layout_height="203dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle_background"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="-34dp" />

    <!-- Sisipkan gambar ke dalam ImageView menggunakan app:srcCompat -->


</androidx.constraintlayout.widget.ConstraintLayout>